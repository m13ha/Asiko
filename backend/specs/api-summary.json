{
  "openapi": "3.0.0",
  "info": {
    "title": "Appointment Master API",
    "version": "1.0.0",
    "description": "API documentation for the Appointment Master application"
  },
  "servers": [
    {
      "url": "http://localhost:5000",
      "description": "Local development server"
    }
  ],
  "tags": [
    {
      "name": "Authentication",
      "description": "User authentication endpoints"
    },
    {
      "name": "Appointments",
      "description": "Appointment management endpoints"
    },
    {
      "name": "Bookings",
      "description": "Booking management endpoints"
    }
  ],
  "paths": {
    "/login": {
      "post": {
        "tags": ["Authentication"],
        "summary": "User login",
        "description": "Authenticate a user and return a JWT token"
      }
    },
    "/logout": {
      "post": {
        "tags": ["Authentication"],
        "summary": "User logout",
        "description": "Log out a user"
      }
    },
    "/users": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Create a new user",
        "description": "Register a new user in the system"
      }
    },
    "/appointments": {
      "post": {
        "tags": ["Appointments"],
        "summary": "Create a new appointment",
        "description": "Create a new appointment with available booking slots"
      }
    },
    "/appointments/my": {
      "get": {
        "tags": ["Appointments"],
        "summary": "Get user's appointments",
        "description": "Get all appointments created by the authenticated user"
      }
    },
    "/appointments/users/{id}": {
      "get": {
        "tags": ["Appointments"],
        "summary": "Get users registered for an appointment",
        "description": "Get all users who have booked a specific appointment"
      }
    },
    "/appointments/book": {
      "post": {
        "tags": ["Bookings"],
        "summary": "Book as guest",
        "description": "Book an appointment as a guest user"
      }
    },
    "/appointments/book/registered": {
      "post": {
        "tags": ["Bookings"],
        "summary": "Book as registered user",
        "description": "Book an appointment as a registered user"
      }
    },
    "/appointments/slots/{id}": {
      "get": {
        "tags": ["Bookings"],
        "summary": "Get available slots",
        "description": "Get all available booking slots for an appointment"
      }
    },
    "/appointments/registered": {
      "get": {
        "tags": ["Bookings"],
        "summary": "Get user's bookings",
        "description": "Get all bookings made by the authenticated user"
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}