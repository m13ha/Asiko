{
  "openapi": "3.0.0",
  "info": {
    "title": "Appointment Master Data Models",
    "version": "1.0.0",
    "description": "Data models used in the Appointment Master application"
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "Unique identifier for the user"
          },
          "name": {
            "type": "string",
            "description": "User's full name"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "User's email address (unique)"
          },
          "phone_number": {
            "type": "string",
            "description": "User's phone number (unique)"
          },
          "hashed_password": {
            "type": "string",
            "description": "Bcrypt hashed password (not exposed in API responses)"
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp when the user was created"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp when the user was last updated"
          },
          "deleted_at": {
            "type": "string",
            "format": "date-time",
            "nullable": true,
            "description": "Soft delete timestamp"
          }
        }
      },
      "Appointment": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "Unique identifier for the appointment"
          },
          "title": {
            "type": "string",
            "description": "Title of the appointment"
          },
          "start_time": {
            "type": "string",
            "format": "date-time",
            "description": "Daily start time for the appointment"
          },
          "end_time": {
            "type": "string",
            "format": "date-time",
            "description": "Daily end time for the appointment"
          },
          "start_date": {
            "type": "string",
            "format": "date-time",
            "description": "First date of the appointment availability"
          },
          "end_date": {
            "type": "string",
            "format": "date-time",
            "description": "Last date of the appointment availability"
          },
          "booking_duration": {
            "type": "integer",
            "description": "Duration of each booking slot in minutes"
          },
          "max_attendees": {
            "type": "integer",
            "description": "Maximum number of attendees for group appointments"
          },
          "type": {
            "type": "string",
            "enum": ["single", "group"],
            "description": "Type of appointment (single or group)"
          },
          "owner_id": {
            "type": "string",
            "format": "uuid",
            "description": "ID of the user who created the appointment"
          },
          "app_code": {
            "type": "string",
            "description": "Unique code for the appointment"
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp when the appointment was created"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp when the appointment was last updated"
          },
          "deleted_at": {
            "type": "string",
            "format": "date-time",
            "nullable": true,
            "description": "Soft delete timestamp"
          }
        }
      },
      "Booking": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "Unique identifier for the booking"
          },
          "appointment_id": {
            "type": "string",
            "format": "uuid",
            "description": "ID of the appointment this booking belongs to"
          },
          "app_code": {
            "type": "string",
            "description": "Appointment code this booking belongs to"
          },
          "user_id": {
            "type": "string",
            "format": "uuid",
            "nullable": true,
            "description": "ID of the user who made the booking (null for guest bookings)"
          },
          "name": {
            "type": "string",
            "description": "Name of the person who made the booking"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "Email of the person who made the booking"
          },
          "phone": {
            "type": "string",
            "description": "Phone number of the person who made the booking"
          },
          "date": {
            "type": "string",
            "format": "date-time",
            "description": "Date of the booking"
          },
          "start_time": {
            "type": "string",
            "format": "date-time",
            "description": "Start time of the booking"
          },
          "end_time": {
            "type": "string",
            "format": "date-time",
            "description": "End time of the booking"
          },
          "available": {
            "type": "boolean",
            "description": "Whether this slot is available for booking"
          },
          "attendee_count": {
            "type": "integer",
            "description": "Number of attendees for this booking"
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp when the booking was created"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp when the booking was last updated"
          },
          "deleted_at": {
            "type": "string",
            "format": "date-time",
            "nullable": true,
            "description": "Soft delete timestamp"
          }
        }
      }
    }
  }
}